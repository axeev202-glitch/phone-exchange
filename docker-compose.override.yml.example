# Пример файла для локальной разработки
# Скопируйте в docker-compose.override.yml для переопределения настроек

version: '3.8'

services:
  app:
    environment:
      - NODE_ENV=development
    volumes:
      # Монтируем исходный код для hot-reload (если используете nodemon)
      - .:/app
      - /app/node_modules

